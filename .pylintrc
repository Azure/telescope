[FORMAT]
max-line-length=120

[BASIC]
good-names=i,j,k,e,ex,_,id  # Allow short variable names used in PEP8 examples

[MESSAGES CONTROL]
disable=
    missing-docstring,  # Allow missing docstrings
    too-many-arguments, # Allow too many arguments
    too-many-statements, # Allow too many statements
    too-many-locals, # Allow too many locals
    too-few-public-methods, # Allow too few public methods
    too-many-positional-arguments, # Allow too many positional arguments
    too-many-instance-attributes, # Allow too many instance attributes
    line-too-long, # Allow long lines
    broad-exception-caught, # Allow broad exceptions
    broad-exception-raised, # Allow broad exceptions
    R0801,  # Allow duplicate code
    fixme,  # Allow fixme comments
    